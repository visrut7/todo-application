{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "rootDir": ".",
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "styles/**/*"
    ]
}
